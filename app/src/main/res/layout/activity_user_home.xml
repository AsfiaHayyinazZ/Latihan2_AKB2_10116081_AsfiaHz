<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHome">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/ic_header_profile">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_side_menu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_notification" />

    </RelativeLayout>

   <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/foto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        app:civ_border_color="@color/Background"
        app:civ_fill_color="@color/Backgroundinvitefriend"
        app:civ_border_width="3dp"
        app:civ_border_overlay="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/zahroo"/>

    <TextView
        android:id="@+id/namakita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Asfia Hayyinaz Zahro"
        android:textColor="@color/Lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/goldar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namakita"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Blood Type : AB" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/goldar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/separator" />

    <TextView
        android:id="@+id/angkasatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goldar"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:text="80"
        android:textColor="@color/Lightblue"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/angkadua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goldar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="80"
        android:textColor="@color/Lightblue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/angkatiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goldar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="55dp"
        android:text="440"
        android:textColor="@color/Lightblue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtangkasatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angkasatu"
        android:layout_marginLeft="45dp"
        android:text="BLOOD GIVE"
        android:textSize="9sp"/>

    <TextView
        android:id="@+id/txtangkadua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/angkadua"
        android:layout_centerHorizontal="true"
        android:text="BLOOD RECEIVED"
        android:textSize="9sp"
        tools:ignore="UnknownId" />


    <TextView
        android:id="@+id/txtangkatiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/angkatiga"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:text="THANKS"
        android:textSize="9sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtangkadua"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/separator" />

    <ImageView
        android:id="@+id/img_search_donor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtangkasatu"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_search_donor" />


    <TextView
        android:id="@+id/txtdonor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_search_donor"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:text="Search Donor"
        android:textColor="@android:color/black"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/txtdescdonor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtdonor"
        android:layout_marginLeft="47dp"
        android:text="Search donor near you"
        android:textSize="12sp"
        tools:ignore="UnknownId" />


    <ImageView
        android:id="@+id/img_blood_needed"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtangkatiga"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="65dp"
        android:src="@drawable/ic_blood_needed"
        tools:ignore="UnknownId" />



    <TextView
        android:id="@+id/txt_title_blood_needed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_blood_needed"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:text="Blood Needed"
        android:textColor="@android:color/black"
        android:textSize="17sp" />



    <TextView

        android:id="@+id/txt_desc_blood_needed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_blood_needed"
        android:layout_alignParentRight="true"
        android:layout_marginRight="53dp"
        android:text="4 Users need blood"
        android:textSize="12sp" />



    <ImageView
        android:id="@+id/img_message"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtdescdonor"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_message" />



    <TextView
        android:id="@+id/txt_title_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_message"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:text="Message"
        android:textColor="@android:color/black"
        android:textSize="17sp" />



    <TextView
        android:id="@+id/txt_desc_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_message"
        android:layout_marginLeft="55dp"
        android:text="5 New Messages"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/img_donor_history"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txt_desc_blood_needed"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/ic_donor_history" />



    <TextView
        android:id="@+id/txt_title_donor_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_donor_history"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:text="Donor History"
        android:textColor="@android:color/black"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/txt_desc_donor_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_donor_history"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:text="5 Gives 2 Rec"
        android:textSize="12sp" />

</RelativeLayout>
